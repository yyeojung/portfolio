{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended", // 기존(default) "airbnb", 
        "airbnb/hooks",//추가
        "airbnb-typescript", //추가
        "prettier", // 추가
        "plugin:prettier/recommended" // 추가
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project" : "./tsconfig.json" //추가
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prettier/prettier": [
            "error", 
                {
                 "endOfLine": "auto" ,
                 "useTabs": false
                }
            ], 
        "@typescript-eslint/explicit-function-return-type": "off", //추가
        "@typescript-eslint/non-nullable-type-assertion-style": "off" //추가
    }
}
